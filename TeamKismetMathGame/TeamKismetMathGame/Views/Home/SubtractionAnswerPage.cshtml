
@{
    ViewBag.Title = "SubtractionAnswerPage";
}

<h2>Results</h2>

<div class="form-horizontal" style="display:inline-block;">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <span class="label label-default" style="font-size:25px;"> You were asked if @ViewBag.V1 - __ = @ViewBag.V2. </span>
    <span class="label label-default" style="font-size:25px;"> You Chose @ViewBag.QA </span>
</div>

<span class="label label-default" style="font-size:25px;">Your answer was @ViewBag.Correct</span><br /><br/>
<span class="label label-default" style="font-size:28px;">+ @ViewBag.SP SP</span>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <br /><br />
    </div>
</div>

<div>
    @Html.ActionLink("Addition Game", "AdditionPage", "Home", new { @class = "btn btn-default" })
</div>

<div>
    @Html.ActionLink("Subtraction Game", "SubtractionPage", "Home", new { @class = "btn btn-default" })
</div>