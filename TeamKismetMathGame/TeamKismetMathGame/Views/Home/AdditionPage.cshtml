@model TeamKismetMathGame.Models.AdditionQuestion
@{
    ViewBag.Title = "AdditionPage";
}

<h2>AdditionPage</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="display:inline-block;">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <span class="label label-default" style="font-size:28px;">@ViewBag.RNG</span>
        <span class="label label-default" style="font-size:28px;"> + </span>
        @Html.EditorFor(m => m.AddInput)
        @*<input id="Text1" type="text" style="width:30px; margin:0 10px; font-size:28px;" value="@ViewBag.QA" />*@
        <span class="label label-default" style="font-size:28px;"> = </span>
        <span class="label label-default" style="font-size:28px;"> @ViewBag.Answer </span>
    </div>
        <span class="label label-default" style="font-size:28px;"> @ViewBag.AP AP</span>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <br /><br />
                <input type="submit" value="submit" name="Submit" class="btn btn-default" />
                <input type="submit" value="reset" name="reset" class="btn btn-default" />
            </div>
        </div>
}
        <div>
            @Html.ActionLink("Subtraction Game", "SubtractionPage", "Home")
        </div>

        <div>
            @Html.ActionLink("Back to Login", "StudentLogin", "Home")
        </div>

        @section Scripts {
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/jqueryval")
        }